<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h1>Edit question</h1>

  <%= form_with model: @question, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :body %>
      <%= form.text_area :body, id: :question_body, cols: 40, rows: 3, class: 'form-control' %>
    </div>

    <hr class="mb-4">

    <div class="d-flex bd-highlight mb-3">
      <%= form.submit class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Back', test_path(@question.test), class: 'ml-auto' %>
    </div>
  <% end %>
</div>
