<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h1><%= question_header(@question) %></h1>

  <%= render 'shared/errors', recource: @question %>

  <%= form_with model: @question.new_record? ? [@test, @question] : @question, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :body %>
      <%= form.text_area :body, id: :question_body, cols: 40, rows: 3, class: 'form-control' %>
    </div>

    <hr class="mb-4">

    <div class="d-flex bd-highlight mb-3">
      <%= form.submit class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Back', test_path(@test), class: 'ml-auto' %>
    </div>
  <% end %>
</div>
