<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h1>Enter the Guru Gates</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger" role="alert">
      <%= content_tag :p, flash[:alert], class: 'mb-0' %>
    </div>
  <% end %>


  <%= form_with url: sessions_path, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, id: :email, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, id: :password, class: 'form-control' %>
    </div>

    <hr class="mb-4">

    <div class="d-flex bd-highlight mb-3">
      <%= form.submit class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Back', root_path, class: 'ml-auto' %>
    </div>
  <% end %>
</div>
