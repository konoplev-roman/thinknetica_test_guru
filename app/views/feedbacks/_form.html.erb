<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h1><%= t('.header') %></h1>

  <%= render 'shared/errors', resource: @feedback %>

  <%= form_with model: @feedback, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, id: :email, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :message %>
      <%= form.text_area :message, id: :message, cols: 40, rows: 3, class: 'form-control' %>
    </div>

    <hr class="mb-4">

    <div class="d-flex bd-highlight mb-3">
      <%= form.submit class: 'btn btn-primary btn-lg' %>
      <%= link_to t('back'), root_path, class: 'ml-auto' %>
    </div>
  <% end %>
</div>
