<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h1><%= answer_header(@answer) %></h1>

  <p><%= @answer.question.body %></p>

  <%= render 'shared/errors', resource: @answer %>

  <%= form_with model: [:admin, @question, @answer], local: true do |form| %>
    <div class="mb-3">
      <%= form.label :body %>
      <%= form.text_area :body, id: :answer_body, cols: 40, rows: 3, class: 'form-control' %>
    </div>

    <div class="mb-3 form-check">
      <%= form.check_box :correct, id: :answer_correct, class: 'form-check-input' %>
      <%= form.label :correct, class: 'form-check-label' %>
    </div>

    <hr class="mb-4">

    <div class="d-flex bd-highlight mb-3">
      <%= form.submit class: 'btn btn-primary btn-lg' %>
      <%= link_to t('back'), admin_question_path(@answer.question), class: 'ml-auto' %>
    </div>
  <% end %>
</div>
