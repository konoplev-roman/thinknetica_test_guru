<%= form_with model: [:admin, badge], url: update_inline_admin_badge_path(badge),
              class: 'form-inline hide', data: { resource_id: badge.id }, local: true do |form| %>
  <%= form.text_field :title, id: "badge_title_#{badge.id}", class: 'form-control mr-sm-2' %>
  <%= form.submit t('ok'), class: 'btn btn-primary mr-sm-2' %>
  <%= content_tag :span, t('cancel'), class: 'btn btn-secondary mr-sm-2 edit-inline', data: { resource_id: badge.id } %>
<% end %>
