<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h1><%= badge_header(@badge) %></h1>

  <%= render 'shared/errors', resource: @badge %>

  <%= form_with model: [:admin, @badge], local: true do |form| %>
    <div class="mb-3">
      <%= form.label :title %>
      <%= form.text_field :title, id: :badge_title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :image %>
      <%= form.text_field :image, id: :badge_image, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :condition %>
      <%= form.text_field :condition, id: :badge_condition, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :target %>
      <%= form.number_field :target, id: :badge_target, class: 'form-control' %>
    </div>

    <hr class="mb-4">

    <div class="d-flex bd-highlight mb-3">
      <%= form.submit class: 'btn btn-primary btn-lg' %>
      <%= link_to t('back'), admin_badges_path, class: 'ml-auto' %>
    </div>
  <% end %>
</div>
