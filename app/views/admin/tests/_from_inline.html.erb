<%= form_with model: [:admin, test], url: update_inline_admin_test_path(test),
              class: 'form-inline hide', data: { resource_id: test.id }, local: true do |form| %>
  <%= form.text_field :title, id: "test_title_#{test.id}", class: 'form-control mr-sm-2' %>
  <%= form.submit t('ok'), class: 'btn btn-primary mr-sm-2' %>
  <%= content_tag :span, t('cancel'), class: 'btn btn-secondary mr-sm-2 edit-inline', data: { resource_id: test.id } %>
<% end %>
