<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h1><%= test_header(@test) %></h1>

  <%= render 'shared/errors', resource: @test %>

  <%= form_with model: [:admin, @test], local: true do |form| %>
    <div class="mb-3">
      <%= form.label :title %>
      <%= form.text_field :title, id: :test_title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :level %>
      <%= form.number_field :level, id: :test_level, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :id, :title, { prompt: true, id: :test_category_id }, { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= form.label :has_timer %>

      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <%= form.check_box :has_timer, id: :test_has_timer %>
          </div>
        </div>

        <%= form.number_field :time_limit, id: :test_time_limit, class: 'form-control' %>

        <div class="input-group-append">
          <span class="input-group-text">
            <%= form.label :time_limit, class: 'mb-0' %>
          </span>
        </div>
      </div>
    </div>

    <hr class="mb-4">

    <div class="d-flex bd-highlight mb-3">
      <%= form.submit class: 'btn btn-primary btn-lg' %>
      <%= link_to t('back'), admin_tests_path, class: 'ml-auto' %>
    </div>
  <% end %>
</div>
